---
import { getCollection } from "astro:content"
import Project from "./project.astro"

type Props = {
  project: CollectionEntry<'projects'>;
};

const { projects } = Astro.props;
---

<div id="projects">
    <h2>Projects</h2>
    {projects.map(project => (
        <Project project={project}/>
    ))}
</div>

<style>
    #projects {
        display: flex;
        flex-direction: column;
        gap: 20px;
        margin: auto;
        width: 65%;
    }

    h2 {
        margin: 0;
        margin-left: 20px;
        color: white;
        font-family: "Kodchasan", serif;
        font-size: 35px;
        font-weight: 400;
        font-style: normal;
    }
    h3 {
        margin: 0;
        margin-left: 20px;
        color: white;
        font-family: "Kodchasan", serif;
        font-size: 28px;
        font-weight: 400;
        font-style: normal;
    }
</style>
